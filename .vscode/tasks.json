{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile script",
      "type": "shell",
      "command": "/Users/jbd/Dropbox/DEV/projects/extend-script-compiler/escompile.sh",
      "args": ["src/index.jsx", ">", "AiCommandPalette.jsx"],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "format script",
      "type": "shell",
      "command": "prettier",
      "args": ["-w", "AiCommandPalette.jsx"],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "compile",
      "type": "shell",
      "command": "echo 'compiling script...'",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "dependsOrder": "sequence",
      "dependsOn": ["compile script", "format script"]
    },
    {
      "label": "download data",
      "type": "shell",
      "command": "${command:python.interpreterPath}",
      "args": ["tools/build_data.py", "-d", ">", "src/include/data.jsxinc"],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "format data",
      "type": "shell",
      "command": "prettier",
      "args": ["-w", "src/include/data.jsxinc"],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "commands",
      "type": "shell",
      "command": "echo 'downloading updated commands...'",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "dependsOrder": "sequence",
      "dependsOn": ["download data", "format data"]
    }
  ]
}
